<h1>Hello <%=@user.username %>!</h1>

<% @lists.each do |list|%>
<h2><%= list.name %>
<a href="/lists/<%=list.id%>/edit"><i class="fa fa-pencil"></i> </a>
<a href="/lists/<%=list.id%>/delete"><i class="fa fa-times"></i></a></h2>
<a href="tasks/new/<%=list.id%>"><i class="fa fa-plus"></i> New Task</a>

<% list.tasks.each do |task| %>
<p><i class="fa fa-minus"></i> <%= task.name %></p>
<% end %>

<% end %>

<hr>
<a href="lists/new">Create New List</a><br>
<a href="tasks/new">Create New Task</a>